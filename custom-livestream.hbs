{{!< default}}

{{#contentFor "extraHead"}}
<meta property="fediverse:creator" content="@privacyguides@neat.computer">
<style>
  .md-typeset .kg-card.kg-embed-card {
    aspect-ratio: 16 / 9;
  }
  .md-typeset .kg-card.kg-embed-card > iframe {
    height: 100%;
    width: 100%;
  }
</style>
{{/contentFor}}

{{#contentFor "navPrimaryHome"}}
  <li class="md-nav__item md-nav__item--active md-nav__item--section md-nav__item--nested">
    <input class="md-nav__toggle md-toggle " type="checkbox" id="__nav_1" checked="">
    <label class="md-nav__link" for="__nav_1" id="__nav_1_label" tabindex="">
      <span class="md-ellipsis">
        Home
      </span>
      <span class="md-nav__icon md-icon"></span>
    </label>
    <nav class="md-nav" data-md-level="1" aria-labelledby="__nav_1_label" aria-expanded="true">
      <label class="md-nav__title" for="__nav_1">
        <span class="md-nav__icon md-icon"></span>
        Navigation
      </label>
      <ul class="md-nav__list">
        {{navigation type="secondary"}}
      </ul>
    </nav>
  </li>
{{/contentFor}}

{{#post}}
  {{> "components/post-sidebar"}}
  <div class="md-content" data-md-component="content">
    <article class="md-content__inner md-typeset">
      <header class="md-post__header">
        <div class="md-tags">
          <nav class="gh-metadata-list">
            <span title="Date Published" class="gh-author">
              <span class="twemoji">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M19 19H5V8h14m-3-7v2H8V1H6v2H5c-1.11 0-2 .89-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V5a2 2 0 0 0-2-2h-1V1m-1 11h-5v5h5z"></path></svg>
              </span>
              <time datetime="{{date format="YYYY-MM-DDTHH:mm:ssZ"}}" class="md-ellipsis">
                {{date format="MMMM DD, YYYY"}}
              </time>
            </span>
            {{#foreach authors}}
              <div class="gh-author">
                <a class="md-author" href="{{url}}">
                  <img src="{{profile_image}}" alt="{{name}}" />
                </a>
                <span class="md-profile__description">
                  <strong>
                    <a href="{{url}}"><span>{{name}}</span></a>
                  </strong>
                  <br />
                </span>
              </div>
            {{/foreach}}
          </nav>
        </div>
        <h1 class="md-post__title">{{title}}</h1>
      </header>
      <section class="md-post__content gh-content gh-canvas">
        {{content}}
      </section>

      <aside>

        <section>
          <h2 id="show-hosts">Show Hosts</h2>
          {{#foreach authors}}
            <section>
              <div class="pg-author-card kg-card kg-cta-card kg-cta-bg-white kg-cta-minimal kg-cta-has-img" data-layout="minimal">

                <div class="kg-cta-sponsor-label-wrapper">
                  <div class="kg-cta-sponsor-label">
                    <a href="{{url}}" style="white-space: pre-wrap;">{{name}}</a>
                  </div>
                </div>
                  
                <div class="kg-cta-content">
                  <div class="kg-cta-image-container">
                    <a href="{{url}}"><img src="{{profile_image}}" alt="{{name}}" data-image-dimensions="288x288"></a>
                  </div>

                  <div class="kg-cta-content-inner">
                    <div class="kg-cta-text">
                      <p dir="ltr"><span style="white-space: pre-wrap;">{{bio}}</span></p>
                    </div>
                  </div>
                </div>

              </div>
            </section>
          {{/foreach}}
        </section>

        {{#has tag="#writer-kevpham"}}
          <section>
            <h2 id="newsletter-writer">Research &amp; Writing</h2>
            
            {{#has tag="#writer-kevpham"}}
              {{#get "authors" filter="slug:kevpham"}}
                {{#foreach authors}}
                  <section>
                    <div class="pg-author-card kg-card kg-cta-card kg-cta-bg-white kg-cta-minimal kg-cta-has-img" data-layout="minimal">

                      <div class="kg-cta-sponsor-label-wrapper">
                        <div class="kg-cta-sponsor-label">
                          <a href="{{url}}" style="white-space: pre-wrap;">{{name}}</a>
                        </div>
                      </div>
                        
                      <div class="kg-cta-content">
                        <div class="kg-cta-image-container">
                          <a href="{{url}}"><img src="{{profile_image}}" alt="{{name}}" data-image-dimensions="288x288"></a>
                        </div>

                        <div class="kg-cta-content-inner">
                          <div class="kg-cta-text">
                            <p dir="ltr"><span style="white-space: pre-wrap;">{{bio}}</span></p>
                          </div>
                        </div>
                      </div>

                    </div>
                  </section>
                {{/foreach}}
              {{/get}}
            {{/has}}

          </section>
        {{/has}}

      </aside>
    </article>
  </div>
{{/post}}
