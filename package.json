{
    "name": "ghost-material",
    "description": "A Ghost theme based on mkdocs-material",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "author": {
        "name": "Jonah Aragon",
        "email": "jonah@triplebit.net",
        "url": "https://www.jonaharagon.com"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "docs": "https://www.privacyguides.org/",
    "config": {
        "posts_per_page": 20,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "publication_logo_for_dark_mode": {
                "type": "image"
            },
            "hero_heading": {
                "type": "text",
                "default": "Privacy Guides",
                "group": "homepage"
            },
            "hero_subheading": {
                "type": "text",
                "default": "Privacy Guides is a comprehensive, non-profit resource for understanding and improving your online privacy.",
                "group": "homepage"
            },
            "hero_background_color": {
                "type": "color",
                "default": "#ffdd98",
                "group": "homepage"
            },
            "hero_background_color_for_dark_mode": {
                "type": "color",
                "default": "#0a0a0a",
                "group": "homepage"
            },
            "hero_text_color": {
                "type": "select",
                "options": ["Dark", "Light", "Yellow"],
                "default": "Dark",
                "group": "homepage"
            },
            "hero_text_color_for_dark_mode": {
                "type": "select",
                "options": ["Dark", "Light", "Yellow"],
                "default": "Light",
                "group": "homepage"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "2.5.0",
        "autoprefixer": "10.4.21",
        "beeper": "2.1.0",
        "cssnano": "7.1.1",
        "gscan": "5.1.0",
        "gulp": "5.0.1",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "10.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "ordered-read-streams": "2.0.0",
        "postcss": "8.5.6",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.3"
    }
}
