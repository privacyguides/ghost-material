<section class="mdx-parallax__group">
  <div class="md-content md-grid" data-md-component="content">
    <div class="md-content__inner">
      <div class="mdx-spotlight">
        {{#get "tags" filter="slug:articles+visibility:public"}}
          {{#foreach tags}}
            {{#get "posts" include="tags,authors" filter="tag:{{slug}}" limit="1"}}
              {{#foreach posts}}
                {{> "components/spotlight-figure"
                    action="Continue reading →"
                }}
              {{/foreach}}
            {{/get}}
          {{/foreach}}
        {{/get}}
        {{#get "tags" filter="slug:videos+visibility:public"}}
          {{#foreach tags}}
            {{#get "posts" include="tags,authors" filter="tag:{{slug}}+visibility:public" limit="1"}}
              {{#foreach posts}}
                {{> "components/spotlight-figure"}}
              {{/foreach}}
            {{/get}}
          {{/foreach}}
        {{/get}}
        {{#get "tags" filter="slug:this-week-in-privacy+visibility:public"}}
          {{#foreach tags}}
            {{#get "posts" include="tags,authors" filter="tag:{{slug}}" limit="1"}}
              {{#foreach posts}}
                <figure class="mdx-spotlight__feature">
                  <a href="{{#if canonical_url}}{{canonical_url}}{{else}}{{url}}{{/if}}" tabindex="-1">
                    <img
                      class="spotlight-preview"
                      srcset="{{img_url feature_image size="s" absolute="true"}} 300w,
                              {{img_url feature_image size="m" absolute="true"}} 720w,
                              {{img_url feature_image size="l" absolute="true"}} 960w,
                              {{img_url feature_image size="xl" absolute="true"}} 1200w,
                              {{img_url feature_image size="xxl" absolute="true"}} 2000w"
                      sizes="(max-width: 1200px) 100vw, 1200px"
                      src="{{img_url feature_image size="m" absolute="true"}}"
                      alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    >
                  </a>
                  <figcaption class="md-post md-post--excerpt">
                    <div class="md-typeset">
                      <h1><a href="{{#if canonical_url}}{{canonical_url}}{{else}}{{url}}{{/if}}">This Week in Privacy</a></h1>
                      <p>
                        <a class="podcast-button" href="https://www.youtube.com/playlist?list=PL1m__5QdVZYwrrfLgBBAypcKMBlJtXUSP">
                          <img alt="Watch on YouTube" src="{{asset 'images/podcast/youtube-light.svg'}}" width="118" height="40">
                        </a>
                        <a class="podcast-button" href="https://fm.neat.tube/@thisweekinprivacy/feed.xml">
                          <img alt="Get the RSS Feed" src="{{asset 'images/podcast/rss-light.svg'}}" width="126" height="40">
                        </a>
                        <a class="podcast-button" href="https://podcasts.apple.com/podcast/id1726826455">
                          <img alt="Listen on Apple Podcasts" src="{{asset 'images/podcast/apple-light.svg'}}" width="174" height="40">
                        </a>
                        <a class="podcast-button" href="https://www.subscribeonandroid.com/fm.neat.tube/@thisweekinprivacy/feed.xml">
                          <img alt="Subscribe on Android" src="{{asset 'images/podcast/subscribeonandroid-light.svg'}}" width="112" height="40">
                        </a>
                        <a class="podcast-button" href="https://open.spotify.com/show/4ymijssFG5UKHnQh3AgruZ">
                          <img alt="Listen on Spotify" src="{{asset 'images/podcast/spotify-light.svg'}}" width="106" height="40">
                        </a>
                        <a class="podcast-button" href="https://music.amazon.com/podcasts/864d6ff9-57ee-41af-ac81-f9db053cd266/this-week-in-privacy">
                          <img alt="Listen on Amazon Music" src="{{asset 'images/podcast/amazonmusic-light.svg'}}" width="166" height="40">
                        </a>
                        <a class="podcast-button" href="https://pca.st/pexbr5yc">
                          <img alt="Listen on Pocket Casts" src="{{asset 'images/podcast/pocketcasts-light.svg'}}" width="155" height="40">
                        </a>
                        <a class="podcast-button" href="https://antennapod.org/deeplink/subscribe?url=https://fm.neat.tube/@thisweekinprivacy/feed.xml&title=This+Week+in+Privacy">
                          <img alt="Listen on Antennapod" src="{{asset 'images/podcast/antennapod-light.svg'}}" width="147" height="40">
                        </a>
                      </p>
                      <p>
                        We're live on YouTube Fridays at 4 PM CST / 21:00 UTC to talk about privacy news from around the industry, updates from our own team, and anything else you want to discuss.
                      </p>
                    </div>

                    <header class="md-post__header">
                      <div class="md-post__meta md-meta">
                        <ul class="md-meta__list">
                          <li class="md-meta__item">
                            <time datetime="{{date format="YYYY-MM-DD"}}">
                              {{date format="MMMM DD, YYYY"}}
                            </time>
                          </li>
                          <li class="md-meta__item">
                            <a href="{{#if canonical_url}}{{canonical_url}}{{else}}{{url}}{{/if}}" class="md-meta__link">Watch the latest VOD →</a>
                          </li>
                        </ul>
                      </div>
                    </header> 
                  </figcaption>
                </figure>
              {{/foreach}}
            {{/get}}
          {{/foreach}}
        {{/get}}
      </div>
    </div>
  </div>
</section>
